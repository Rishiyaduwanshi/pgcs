---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import { Home, ArrowLeft, Search, BookOpen, Phone, Mail } from 'lucide-astro';
---

<Layout 
  title="Page Not Found - Paramount Grove Convent School" 
  description="The page you're looking for doesn't exist. Return to Paramount Grove Convent School homepage or explore our other pages."
>
  <Navigation />
  
  <!-- 404 Hero Section -->
  <section class="relative min-h-screen flex items-center justify-center bg-gradient-to-br from-primary-600/20 via-accent-600/20 to-primary-800/20 overflow-hidden">
    <div class="absolute inset-0 bg-pattern opacity-10"></div>
    
    <!-- Floating decorative elements -->
    <div class="absolute top-20 left-10 w-32 h-32 bg-primary-400/20 rounded-full blur-xl animate-pulse"></div>
    <div class="absolute bottom-20 right-10 w-48 h-48 bg-accent-400/20 rounded-full blur-xl animate-pulse delay-500"></div>
    <div class="absolute top-1/3 right-1/4 w-24 h-24 bg-primary-500/20 rounded-full blur-lg animate-pulse delay-300"></div>
    
    <div class="container-custom relative px-4">
      <div class="text-center max-w-4xl mx-auto">
        <!-- 404 Animation -->
        <div class="mb-8 md:mb-12">
          <div class="relative">
            <!-- Large 404 Text -->
            <h1 class="text-8xl md:text-9xl lg:text-[12rem] font-black text-transparent bg-gradient-to-r from-primary-600 via-accent-600 to-primary-800 bg-clip-text leading-none select-none">
              404
            </h1>
            
            <!-- Floating School Elements -->
            <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2">
              <div class="animate-float">
                <BookOpen size={48} class="text-primary-600 opacity-80" />
              </div>
            </div>
            
            <div class="absolute top-1/4 right-1/4 animate-float-delay">
              <div class="w-8 h-8 bg-accent-600 rounded-full opacity-60"></div>
            </div>
            
            <div class="absolute bottom-1/4 left-1/4 animate-float-delay-2">
              <div class="w-6 h-6 bg-primary-500 rounded-full opacity-70"></div>
            </div>
          </div>
        </div>
        
        <!-- Error Message -->
        <div class="mb-8 md:mb-12">
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 dark:text-white mb-4 md:mb-6">
            Oops! Page Not Found
          </h2>
          <p class="text-lg md:text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto leading-relaxed">
            The page you're looking for seems to have wandered off to a different classroom. 
            Don't worry, let's help you find your way back to learning!
          </p>
        </div>
        
        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-12">
          <a 
            href="/" 
            class="w-full sm:w-auto inline-flex items-center justify-center px-8 py-4 bg-gradient-to-r from-primary-600 to-accent-600 text-white font-semibold rounded-full hover:from-primary-700 hover:to-accent-700 transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl"
          >
            <Home size={20} class="mr-2" />
            Back to Home
          </a>
          
          <button 
            onclick="history.back()" 
            class="w-full sm:w-auto inline-flex items-center justify-center px-8 py-4 border-2 border-primary-600 text-primary-600 dark:text-white font-semibold rounded-full hover:bg-primary-600 hover:text-white transition-all duration-300"
          >
            <ArrowLeft size={20} class="mr-2" />
            Go Back
          </button>
        </div>
        
        <!-- Search Box -->
        <div class="max-w-md mx-auto mb-12">
          <div class="relative">
            <Search size={20} class="absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400" />
            <input 
              type="text" 
              placeholder="Search our website..." 
              class="w-full pl-12 pr-4 py-4 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-full focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 text-gray-900 dark:text-white placeholder-gray-500 transition-all duration-300 shadow-md"
            />
          </div>
        </div>
        
        <!-- Quick Links -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6 max-w-3xl mx-auto mb-4">
          <a 
            href="/about" 
            class="group bg-white/80 dark:bg-gray-800/80 rounded-xl p-4 md:p-6 text-center hover:bg-white dark:hover:bg-gray-800 transition-all duration-300 transform hover:-translate-y-1 shadow-md hover:shadow-lg border border-gray-200 dark:border-gray-700"
          >
            <div class="w-12 h-12 bg-gradient-to-br from-primary-600 to-accent-600 rounded-lg flex items-center justify-center mx-auto mb-3 group-hover:scale-110 transition-transform duration-300">
              <BookOpen size={24} class="text-white" />
            </div>
            <h3 class="font-semibold text-gray-900 dark:text-white text-sm md:text-base">About Us</h3>
          </a>
          
          <a 
            href="/admissions" 
            class="group bg-white/80 dark:bg-gray-800/80 rounded-xl p-4 md:p-6 text-center hover:bg-white dark:hover:bg-gray-800 transition-all duration-300 transform hover:-translate-y-1 shadow-md hover:shadow-lg border border-gray-200 dark:border-gray-700"
          >
            <div class="w-12 h-12 bg-gradient-to-br from-green-600 to-emerald-600 rounded-lg flex items-center justify-center mx-auto mb-3 group-hover:scale-110 transition-transform duration-300">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C20.832 18.477 19.246 18 17.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
              </svg>
            </div>
            <h3 class="font-semibold text-gray-900 dark:text-white text-sm md:text-base">Admissions</h3>
          </a>
          
          <a 
            href="/gallery" 
            class="group bg-white/80 dark:bg-gray-800/80 rounded-xl p-4 md:p-6 text-center hover:bg-white dark:hover:bg-gray-800 transition-all duration-300 transform hover:-translate-y-1 shadow-md hover:shadow-lg border border-gray-200 dark:border-gray-700"
          >
            <div class="w-12 h-12 bg-gradient-to-br from-purple-600 to-pink-600 rounded-lg flex items-center justify-center mx-auto mb-3 group-hover:scale-110 transition-transform duration-300">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h3 class="font-semibold text-gray-900 dark:text-white text-sm md:text-base">Gallery</h3>
          </a>
          
          <a 
            href="/contact" 
            class="group bg-white/80 dark:bg-gray-800/80 rounded-xl p-4 md:p-6 text-center hover:bg-white dark:hover:bg-gray-800 transition-all duration-300 transform hover:-translate-y-1 shadow-md hover:shadow-lg border border-gray-200 dark:border-gray-700"
          >
            <div class="w-12 h-12 bg-gradient-to-br from-orange-600 to-red-600 rounded-lg flex items-center justify-center mx-auto mb-3 group-hover:scale-110 transition-transform duration-300">
              <Phone size={24} class="text-white" />
            </div>
            <h3 class="font-semibold text-gray-900 dark:text-white text-sm md:text-base">Contact</h3>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Need Help Section -->
  <section class="py-16 bg-gradient-to-r from-primary-600 to-accent-600">
    <div class="container-custom px-4 text-center">
      <h2 class="text-2xl md:text-3xl font-bold text-white mb-4">
        Still Need Help?
      </h2>
      <p class="text-lg text-white/90 mb-8 max-w-2xl mx-auto">
        Our friendly team is here to assist you. Contact us directly for any questions or support.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a 
          href="/contact" 
          class="w-full sm:w-auto inline-flex items-center justify-center px-6 py-3 bg-white text-primary-600 font-semibold rounded-full hover:bg-gray-100 transition-colors duration-300"
        >
          <Mail size={18} class="mr-2" />
          Contact Support
        </a>
        <a 
          href="tel:+918540982656" 
          class="w-full sm:w-auto inline-flex items-center justify-center px-6 py-3 border-2 border-white text-white font-semibold rounded-full hover:bg-white hover:text-primary-600 transition-colors duration-300"
        >
          <Phone size={18} class="mr-2" />
          Call Us
        </a>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<style>
  .bg-pattern {
    background-image: radial-gradient(circle at 25% 25%, rgba(99, 102, 241, 0.1) 0%, transparent 50%);
  }
  
  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-20px);
    }
  }
  
  @keyframes float-delay {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-15px);
    }
  }
  
  @keyframes float-delay-2 {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }
  
  .animate-float {
    animation: float 3s ease-in-out infinite;
  }
  
  .animate-float-delay {
    animation: float-delay 3s ease-in-out infinite 1s;
  }
  
  .animate-float-delay-2 {
    animation: float-delay-2 3s ease-in-out infinite 2s;
  }
  
  /* Enhanced mobile responsiveness */
  @media (max-width: 640px) {
    .container-custom {
      padding-left: 1rem;
      padding-right: 1rem;
    }
  }
</style>

<script>
  // Search functionality
  document.addEventListener('DOMContentLoaded', () => {
    const searchInput = document.querySelector('input[type="text"]');
    
    if (searchInput) {
      searchInput.addEventListener('keypress', (e) => {
        if (e.key === 'Enter') {
          const query = searchInput.value.trim();
          if (query) {
            // Redirect to search results or homepage with query
            window.location.href = `/?search=${encodeURIComponent(query)}`;
          }
        }
      });
    }
  });
</script>
