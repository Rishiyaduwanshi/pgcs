---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import { GraduationCap, Award, Users, BookOpen, Mail, Phone } from 'lucide-astro';
---

<Layout 
  title="Faculty & Staff - Paramount Grove Convent School | Experienced Teachers & Leadership Team"
  description="Meet our experienced faculty and staff at PGCS Darbhanga. Qualified teachers with years of experience, dedicated to providing quality education and individual attention to every student."
  keywords="PGCS faculty, experienced teachers Darbhanga, qualified staff, school leadership team, expert educators, teaching staff, academic excellence, faculty qualifications"
>
  <Navigation />
  
  <!-- Hero Section -->
  <section class="section-padding bg-gradient-to-br from-gray-900 via-blue-900 to-gray-900 relative overflow-hidden">
    <div class="absolute inset-0 bg-mesh opacity-30"></div>
    <div class="container-custom relative z-10">
      <div class="text-center">
        <h1 class="heading-1 mb-6 text-glow">Our Distinguished Faculty</h1>
        <p class="text-lead max-w-4xl mx-auto">
          Meet our team of passionate educators who bring years of experience, 
          expertise, and dedication to inspire and guide our students towards excellence.
        </p>
      </div>
    </div>
  </section>

  <!-- Faculty Stats -->
  <section class="section-padding bg-gray-800">
    <div class="container-custom">
      <div class="grid md:grid-cols-4 gap-8 text-center">
        <div class="card p-6">
          <GraduationCap class="text-blue-400 mx-auto mb-4" size={48} />
          <div class="text-3xl font-bold text-blue-400 mb-2">85+</div>
          <div class="text-gray-300">Qualified Teachers</div>
        </div>
        
        <div class="card p-6">
          <Award class="text-green-400 mx-auto mb-4" size={48} />
          <div class="text-3xl font-bold text-green-400 mb-2">15+</div>
          <div class="text-gray-300">Years Avg. Experience</div>
        </div>
        
        <div class="card p-6">
          <Users class="text-purple-400 mx-auto mb-4" size={48} />
          <div class="text-3xl font-bold text-purple-400 mb-2">25+</div>
          <div class="text-gray-300">PhD Holders</div>
        </div>
        
        <div class="card p-6">
          <BookOpen class="text-yellow-400 mx-auto mb-4" size={48} />
          <div class="text-3xl font-bold text-yellow-400 mb-2">12:1</div>
          <div class="text-gray-300">Student-Teacher Ratio</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Leadership Team -->
  <section class="section-padding bg-gray-900">
    <div class="container-custom">
      <div class="text-center mb-16">
        <h2 class="heading-2 mb-6">Leadership Team</h2>
        <p class="text-lead max-w-3xl mx-auto">
          Our visionary leaders who guide the institution towards excellence
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Principal -->
        <div class="card p-6 text-center">
          <div class="w-32 h-32 bg-gradient-to-br from-blue-600 to-purple-600 rounded-full mx-auto mb-6 flex items-center justify-center text-4xl font-bold text-white">
            DR
          </div>
          <h3 class="text-xl font-semibold mb-2">Dr. Rajesh Kumar</h3>
          <p class="text-blue-400 mb-3">Principal</p>
          <p class="text-gray-300 text-sm mb-4">
            PhD in Education, 25+ years of experience in educational leadership and administration.
          </p>
          <div class="flex justify-center space-x-4">
            <Mail class="text-gray-400 cursor-pointer hover:text-blue-400" size={20} />
            <Phone class="text-gray-400 cursor-pointer hover:text-blue-400" size={20} />
          </div>
        </div>

        <!-- Vice Principal -->
        <div class="card p-6 text-center">
          <div class="w-32 h-32 bg-gradient-to-br from-green-600 to-blue-600 rounded-full mx-auto mb-6 flex items-center justify-center text-4xl font-bold text-white">
            PS
          </div>
          <h3 class="text-xl font-semibold mb-2">Mrs. Priya Sharma</h3>
          <p class="text-green-400 mb-3">Vice Principal</p>
          <p class="text-gray-300 text-sm mb-4">
            M.Ed, 20+ years of experience in curriculum development and student counseling.
          </p>
          <div class="flex justify-center space-x-4">
            <Mail class="text-gray-400 cursor-pointer hover:text-green-400" size={20} />
            <Phone class="text-gray-400 cursor-pointer hover:text-green-400" size={20} />
          </div>
        </div>

        <!-- Dean -->
        <div class="card p-6 text-center">
          <div class="w-32 h-32 bg-gradient-to-br from-purple-600 to-pink-600 rounded-full mx-auto mb-6 flex items-center justify-center text-4xl font-bold text-white">
            AM
          </div>
          <h3 class="text-xl font-semibold mb-2">Dr. Anjali Mehta</h3>
          <p class="text-purple-400 mb-3">Dean of Studies</p>
          <p class="text-gray-300 text-sm mb-4">
            PhD in Psychology, Specialist in child psychology and learning methodologies.
          </p>
          <div class="flex justify-center space-x-4">
            <Mail class="text-gray-400 cursor-pointer hover:text-purple-400" size={20} />
            <Phone class="text-gray-400 cursor-pointer hover:text-purple-400" size={20} />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Department Heads -->
  <section class="section-padding bg-gray-800">
    <div class="container-custom">
      <div class="text-center mb-16">
        <h2 class="heading-2 mb-6">Department Heads</h2>
        <p class="text-lead max-w-3xl mx-auto">
          Expert educators leading their respective departments with passion and expertise
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- Mathematics -->
        <div class="card p-6 text-center">
          <div class="w-20 h-20 bg-gradient-to-br from-blue-600 to-cyan-600 rounded-full mx-auto mb-4 flex items-center justify-center text-xl font-bold text-white">
            RG
          </div>
          <h3 class="text-lg font-semibold mb-1">Mr. Rahul Gupta</h3>
          <p class="text-blue-400 text-sm mb-2">Mathematics</p>
          <p class="text-gray-300 text-xs">M.Sc Mathematics, 18 years exp.</p>
        </div>

        <!-- Science -->
        <div class="card p-6 text-center">
          <div class="w-20 h-20 bg-gradient-to-br from-green-600 to-teal-600 rounded-full mx-auto mb-4 flex items-center justify-center text-xl font-bold text-white">
            SK
          </div>
          <h3 class="text-lg font-semibold mb-1">Dr. Sunita Kapoor</h3>
          <p class="text-green-400 text-sm mb-2">Science</p>
          <p class="text-gray-300 text-xs">PhD Chemistry, 22 years exp.</p>
        </div>

        <!-- English -->
        <div class="card p-6 text-center">
          <div class="w-20 h-20 bg-gradient-to-br from-purple-600 to-pink-600 rounded-full mx-auto mb-4 flex items-center justify-center text-xl font-bold text-white">
            MJ
          </div>
          <h3 class="text-lg font-semibold mb-1">Ms. Meera Joshi</h3>
          <p class="text-purple-400 text-sm mb-2">English</p>
          <p class="text-gray-300 text-xs">M.A English Lit., 15 years exp.</p>
        </div>

        <!-- Social Studies -->
        <div class="card p-6 text-center">
          <div class="w-20 h-20 bg-gradient-to-br from-yellow-600 to-orange-600 rounded-full mx-auto mb-4 flex items-center justify-center text-xl font-bold text-white">
            VT
          </div>
          <h3 class="text-lg font-semibold mb-1">Mr. Vikram Tiwari</h3>
          <p class="text-yellow-400 text-sm mb-2">Social Studies</p>
          <p class="text-gray-300 text-xs">M.A History, 20 years exp.</p>
        </div>

        <!-- Computer Science -->
        <div class="card p-6 text-center">
          <div class="w-20 h-20 bg-gradient-to-br from-red-600 to-pink-600 rounded-full mx-auto mb-4 flex items-center justify-center text-xl font-bold text-white">
            AS
          </div>
          <h3 class="text-lg font-semibold mb-1">Mrs. Anita Singh</h3>
          <p class="text-red-400 text-sm mb-2">Computer Science</p>
          <p class="text-gray-300 text-xs">MCA, 12 years exp.</p>
        </div>

        <!-- Physical Education -->
        <div class="card p-6 text-center">
          <div class="w-20 h-20 bg-gradient-to-br from-indigo-600 to-blue-600 rounded-full mx-auto mb-4 flex items-center justify-center text-xl font-bold text-white">
            DY
          </div>
          <h3 class="text-lg font-semibold mb-1">Mr. Deepak Yadav</h3>
          <p class="text-indigo-400 text-sm mb-2">Physical Education</p>
          <p class="text-gray-300 text-xs">B.P.Ed, 14 years exp.</p>
        </div>

        <!-- Arts -->
        <div class="card p-6 text-center">
          <div class="w-20 h-20 bg-gradient-to-br from-pink-600 to-rose-600 rounded-full mx-auto mb-4 flex items-center justify-center text-xl font-bold text-white">
            KM
          </div>
          <h3 class="text-lg font-semibold mb-1">Ms. Kavita Mishra</h3>
          <p class="text-pink-400 text-sm mb-2">Arts & Crafts</p>
          <p class="text-gray-300 text-xs">BFA, 10 years exp.</p>
        </div>

        <!-- Music -->
        <div class="card p-6 text-center">
          <div class="w-20 h-20 bg-gradient-to-br from-teal-600 to-green-600 rounded-full mx-auto mb-4 flex items-center justify-center text-xl font-bold text-white">
            SP
          </div>
          <h3 class="text-lg font-semibold mb-1">Mr. Sanjay Pandey</h3>
          <p class="text-teal-400 text-sm mb-2">Music</p>
          <p class="text-gray-300 text-xs">Sangeet Visharad, 16 years exp.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Faculty Excellence -->
  <section class="section-padding bg-gray-900">
    <div class="container-custom">
      <div class="text-center mb-16">
        <h2 class="heading-2 mb-6">Faculty Excellence</h2>
        <p class="text-lead max-w-3xl mx-auto">
          Our commitment to continuous learning and professional development
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="card p-6">
          <Award class="text-yellow-400 mb-4" size={32} />
          <h3 class="text-xl font-semibold mb-3">Awards & Recognition</h3>
          <p class="text-gray-300 text-sm">
            Our faculty members have received numerous awards for teaching excellence, 
            research contributions, and innovative teaching methodologies.
          </p>
        </div>

        <div class="card p-6">
          <BookOpen class="text-blue-400 mb-4" size={32} />
          <h3 class="text-xl font-semibold mb-3">Continuous Learning</h3>
          <p class="text-gray-300 text-sm">
            Regular workshops, seminars, and training programs ensure our teachers 
            stay updated with the latest educational trends and technologies.
          </p>
        </div>

        <div class="card p-6">
          <Users class="text-green-400 mb-4" size={32} />
          <h3 class="text-xl font-semibold mb-3">Student-Centered Approach</h3>
          <p class="text-gray-300 text-sm">
            Our faculty focuses on individual student needs, fostering a supportive 
            learning environment that encourages creativity and critical thinking.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Join Our Team -->
  <section class="section-padding bg-gray-800">
    <div class="container-custom">
      <div class="text-center">
        <h2 class="heading-2 mb-6">Join Our Team</h2>
        <p class="text-lead max-w-3xl mx-auto mb-8">
          We are always looking for passionate educators who share our vision 
          of providing quality education and nurturing young minds.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/careers" class="btn-primary">View Open Positions</a>
          <a href="/contact" class="btn-secondary">Contact HR</a>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
