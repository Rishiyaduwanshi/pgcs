---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import { Calendar, FileText, Users, CheckCircle, AlertCircle, Clock, BookOpen, Edit, Phone, Mail, IndianRupee, Star, Trophy, Gift } from 'lucide-astro';

// Import admissions data
import admissionsData from '../data/admissions.json';

const { admissionInfo } = admissionsData;

// Dynamic date calculation
const currentDate = new Date();
const currentYear = currentDate.getFullYear();
const currentMonth = currentDate.getMonth() + 1; // JavaScript months are 0-indexed

// If it's November (11) or December (12), show next year's admission
const isAdmissionPeriod = currentMonth >= 11;
const admissionYear = isAdmissionPeriod ? currentYear + 1 : currentYear;
const academicYear = isAdmissionPeriod ? `${currentYear + 1}-${(currentYear + 2).toString().slice(-2)}` : `${currentYear}-${(currentYear + 1).toString().slice(-2)}`;
---

<Layout 
  title="Admissions - Paramount Grove Convent School" 
  description="Join Paramount Grove Convent School. Learn about our entrance test process, admission requirements, and start your child's journey to academic excellence."
>
  <Navigation />
  
  <!-- Hero Section -->
  <section class="relative pt-24 pb-16 bg-gradient-to-br from-primary-600/20 via-accent-600/20 to-primary-800/20 overflow-hidden">
    <div class="absolute inset-0 bg-pattern opacity-10"></div>
    
    <!-- Floating decorative elements -->
    <div class="absolute top-20 left-10 w-16 h-16 bg-primary-400/20 rounded-full blur-lg animate-pulse"></div>
    <div class="absolute bottom-20 right-10 w-24 h-24 bg-accent-400/20 rounded-full blur-lg animate-pulse delay-500"></div>
    
    <div class="container-custom relative">
      <div class="text-center">
        <div class="inline-flex items-center px-4 py-2 bg-primary-600/20 text-primary-400 rounded-full border border-primary-600/30 backdrop-blur-sm mb-6">
          <AlertCircle size={20} class="mr-2" />
          <span class="font-semibold">Admissions Open for {academicYear}</span>
        </div>
        
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 dark:text-white mb-6">
          Join Our School <span class="text-primary-600">Community</span>
        </h1>
        <p class="text-xl md:text-2xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto mb-8">
          Begin your child's journey to academic excellence through our comprehensive entrance test process
        </p>
        
        <!-- Key Highlights -->
        <div class="grid md:grid-cols-3 gap-4 md:gap-6 mt-8 max-w-4xl mx-auto">
          <div class="flex items-center gap-3 px-4 py-3 bg-white/80 dark:bg-gray-800/80 rounded-xl backdrop-blur-sm">
            <Trophy class="text-primary-600" size={24} />
            <div class="text-left">
              <p class="font-semibold text-sm">Merit-Based Benefits</p>
              <p class="text-xs text-gray-600 dark:text-gray-400">Free dress, admission & more</p>
            </div>
          </div>
          
          <div class="flex items-center gap-3 px-4 py-3 bg-white/80 dark:bg-gray-800/80 rounded-xl backdrop-blur-sm">
            <BookOpen class="text-accent-600" size={24} />
            <div class="text-left">
              <p class="font-semibold text-sm">Entrance Test</p>
              <p class="text-xs text-gray-600 dark:text-gray-400">Class-based evaluation</p>
            </div>
          </div>
          
          <div class="flex items-center gap-3 px-4 py-3 bg-white/80 dark:bg-gray-800/80 rounded-xl backdrop-blur-sm">
            <IndianRupee class="text-green-600" size={24} />
            <div class="text-left">
              <p class="font-semibold text-sm">Prospectus</p>
              <p class="text-xs text-gray-600 dark:text-gray-400">₹{admissionInfo.entranceTest.prospectusPrice} only</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Entrance Test Information -->
  <section class="py-16 bg-gradient-to-br from-white to-gray-50 dark:from-gray-900 dark:to-gray-800">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
          Entrance Test <span class="text-primary-600">Process</span>
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          Our entrance test ensures students are placed in appropriate classes based on their current knowledge level
        </p>
      </div>

      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <!-- Test Information -->
        <div class="space-y-6">
          <div class="bg-white dark:bg-gray-800 rounded-2xl p-6 shadow-lg border border-gray-200 dark:border-gray-700">
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 bg-primary-600 rounded-full flex items-center justify-center mr-4">
                <BookOpen class="text-white" size={24} />
              </div>
              <h3 class="text-xl font-bold text-gray-900 dark:text-white">How It Works</h3>
            </div>
            <ul class="space-y-3 text-gray-600 dark:text-gray-300">
              <li class="flex items-start">
                <span class="w-2 h-2 bg-primary-600 rounded-full mt-2 mr-3 flex-shrink-0"></span>
                Student wants admission in Class 8 → Takes Class 7 entrance test
              </li>
              <li class="flex items-start">
                <span class="w-2 h-2 bg-primary-600 rounded-full mt-2 mr-3 flex-shrink-0"></span>
                If student passes → Gets admission in Class 8
              </li>
              <li class="flex items-start">
                <span class="w-2 h-2 bg-primary-600 rounded-full mt-2 mr-3 flex-shrink-0"></span>
                If student fails → Must take admission in Class 7
              </li>
              <li class="flex items-start">
                <span class="w-2 h-2 bg-primary-600 rounded-full mt-2 mr-3 flex-shrink-0"></span>
                Test criteria varies each year based on performance standards
              </li>
            </ul>
          </div>

          <div class="bg-gradient-to-r from-accent-600 to-primary-600 rounded-2xl p-6 text-white">
            <div class="flex items-center mb-4">
              <Gift class="mr-3" size={28} />
              <h3 class="text-xl font-bold">Special Benefits</h3>
            </div>
            <div class="grid md:grid-cols-2 gap-4">
              {admissionInfo.entranceTest.benefits.map((benefit, index) => (
                <div class="flex items-center">
                  <Star class="text-yellow-300 mr-2" size={16} />
                  <span class="text-sm">{benefit}</span>
                </div>
              ))}
            </div>
            <p class="text-sm text-white/80 mt-4">
              *Benefits vary each year based on entrance test performance and school policies
            </p>
          </div>
        </div>

        <!-- Contact Information -->
        <div class="bg-white dark:bg-gray-800 rounded-2xl p-8 shadow-lg border border-gray-200 dark:border-gray-700">
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-6">
            Get Entrance Test Details
          </h3>
          <p class="text-gray-600 dark:text-gray-300 mb-6">
            For specific entrance test criteria, syllabus, and current year benefits, contact our admissions office:
          </p>
          
          <div class="space-y-4">
            <div class="flex items-center">
              <Phone class="text-primary-600 mr-3" size={20} />
              <div>
                <p class="font-semibold text-gray-900 dark:text-white">Phone Numbers</p>
                <div class="text-sm text-gray-600 dark:text-gray-300">
                  {admissionInfo.entranceTest.contactInfo.phone.map((phone, index) => (
                    <a href={`tel:${phone}`} class="hover:text-primary-600 mr-4">{phone}</a>
                  ))}
                </div>
              </div>
            </div>
            
            <div class="flex items-center">
              <Mail class="text-primary-600 mr-3" size={20} />
              <div>
                <p class="font-semibold text-gray-900 dark:text-white">Email</p>
                <a href={`mailto:${admissionInfo.entranceTest.contactInfo.email}`} class="text-sm text-gray-600 dark:text-gray-300 hover:text-primary-600">
                  {admissionInfo.entranceTest.contactInfo.email}
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Admission Process -->
  <section class="py-16 bg-white dark:bg-gray-900">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
          Admission <span class="text-primary-600">Process</span>
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          Follow these simple steps to secure your child's admission at PGCS
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 md:gap-8">
        {admissionInfo.process.map((step, index) => (
          <div class="relative bg-gray-50 dark:bg-gray-800 rounded-2xl p-6 text-center hover:shadow-lg transition-shadow duration-300">
            <div class="w-16 h-16 bg-gradient-to-br from-primary-600 to-accent-600 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-white font-bold text-lg">{step.step}</span>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">
              {step.title}
            </h3>
            <p class="text-gray-600 dark:text-gray-300 text-sm mb-3">
              {step.description}
            </p>
            <p class="text-xs text-gray-500 dark:text-gray-400">
              {step.details}
            </p>
            
            {index < admissionInfo.process.length - 1 && (
              <div class="hidden lg:block absolute top-1/2 -right-4 transform -translate-y-1/2">
                <div class="w-8 h-0.5 bg-gradient-to-r from-primary-600 to-accent-600"></div>
              </div>
            )}
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Requirements -->
  <section class="py-16 bg-gradient-to-br from-gray-50 to-primary-50 dark:from-gray-800 dark:to-primary-900/20">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
          Requirements & <span class="text-primary-600">Documents</span>
        </h2>
      </div>

      <div class="grid lg:grid-cols-2 gap-12">
        <!-- Required Documents -->
        <div class="bg-white dark:bg-gray-800 rounded-2xl p-8 shadow-lg border border-gray-200 dark:border-gray-700">
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-6 flex items-center">
            <FileText class="text-primary-600 mr-3" size={24} />
            Required Documents
          </h3>
          <div class="space-y-3">
            {admissionInfo.requirements.documents.map((doc, index) => (
              <div class="flex items-start">
                <CheckCircle class="text-green-600 mr-3 mt-1 flex-shrink-0" size={16} />
                <span class="text-gray-600 dark:text-gray-300 text-sm">{doc}</span>
              </div>
            ))}
          </div>
        </div>

        <!-- Age Requirements -->
        <div class="bg-white dark:bg-gray-800 rounded-2xl p-8 shadow-lg border border-gray-200 dark:border-gray-700">
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-6 flex items-center">
            <Users class="text-primary-600 mr-3" size={24} />
            Age Requirements
          </h3>
          <div class="space-y-4">
            {admissionInfo.requirements.ageRequirements.map((req, index) => (
              <div class="flex justify-between items-center p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
                <span class="font-medium text-gray-900 dark:text-white">{req.class}</span>
                <span class="text-primary-600 font-semibold">{req.age}</span>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Important Notes -->
  <section class="py-16 bg-white dark:bg-gray-900">
    <div class="container-custom">
      <div class="bg-gradient-to-r from-amber-50 to-orange-50 dark:from-amber-900/20 dark:to-orange-900/20 rounded-2xl p-8 border border-amber-200 dark:border-amber-800">
        <div class="flex items-center mb-6">
          <AlertCircle class="text-amber-600 mr-3" size={28} />
          <h3 class="text-xl font-bold text-gray-900 dark:text-white">Important Notes</h3>
        </div>
        <div class="grid md:grid-cols-2 gap-4">
          {admissionInfo.importantNotes.map((note, index) => (
            <div class="flex items-start">
              <span class="w-2 h-2 bg-amber-600 rounded-full mt-2 mr-3 flex-shrink-0"></span>
              <p class="text-sm text-gray-700 dark:text-gray-300">{note}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-gradient-to-r from-primary-600 to-accent-600">
    <div class="container-custom text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
        Ready to Start Your Journey?
      </h2>
      <p class="text-xl text-white/90 mb-8 max-w-2xl mx-auto">
        Visit our school office to purchase the prospectus and begin your admission process today.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="inline-flex items-center px-8 py-3 bg-white text-primary-600 font-semibold rounded-full hover:bg-gray-100 transition-colors duration-300">
          Visit School Office
          <Clock class="ml-2" size={20} />
        </a>
        <a href="/gallery" class="inline-flex items-center px-8 py-3 border-2 border-white text-white font-semibold rounded-full hover:bg-white hover:text-primary-600 transition-colors duration-300">
          View School Gallery
          <Users class="ml-2" size={20} />
        </a>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<style>
  .bg-pattern {
    background-image: radial-gradient(circle at 25% 25%, rgba(99, 102, 241, 0.1) 0%, transparent 50%);
  }
</style>
