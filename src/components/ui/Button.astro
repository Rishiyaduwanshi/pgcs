---
import { cn } from '../../lib/utils';

const { 
  variant = 'primary', 
  size = 'md', 
  href,
  class: className, 
  ...props 
} = Astro.props;

const buttonVariants = {
  primary: 'bg-blue-600 text-white hover:bg-blue-700 focus:ring-blue-500 shadow-lg hover:shadow-xl',
  secondary: 'bg-transparent text-blue-400 border-2 border-blue-400 hover:bg-blue-400 hover:text-white focus:ring-blue-500',
  accent: 'bg-green-600 text-white hover:bg-green-700 focus:ring-green-500 shadow-lg hover:shadow-xl',
  ghost: 'bg-transparent text-gray-300 hover:bg-white/10 hover:text-white'
};

const buttonSizes = {
  sm: 'px-4 py-2 text-sm',
  md: 'px-6 py-3',
  lg: 'px-8 py-4 text-lg'
};

const baseClasses = 'inline-flex items-center justify-center font-medium text-center transition-all duration-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-900';

const classes = cn(
  baseClasses,
  buttonVariants[variant],
  buttonSizes[size],
  className
);
---

{href ? (
  <a 
    href={href}
    class={classes}
    {...props}
  >
    <slot />
  </a>
) : (
  <button 
    class={classes}
    {...props}
  >
    <slot />
  </button>
)}
