---
import { ArrowRight, Award, Users, BookOpen, Target, Star } from "lucide-astro";
---

<section
  class="relative overflow-hidden gradient-bg text-white min-h-screen flex items-center"
>
  <!-- Background Pattern -->
  <div class="absolute inset-0 bg-pattern opacity-20"></div>

  <!-- Animated Background Elements -->
  <div class="absolute inset-0">
    <div
      class="absolute top-20 left-10 w-32 h-32 bg-white/5 rounded-full blur-xl animate-pulse-slow"
    >
    </div>
    <div
      class="absolute bottom-20 right-10 w-48 h-48 bg-accent-500/20 rounded-full blur-2xl animate-pulse-slow delay-75"
    >
    </div>
    <div
      class="absolute top-1/2 left-1/4 w-24 h-24 bg-primary-400/20 rounded-full blur-xl animate-pulse-slow delay-150"
    >
    </div>
  </div>

  <!-- Hero Content -->
  <div class="relative w-full pl-2">
    <div class="container-custom">
      <div class="section-padding">
        <div class="grid lg:grid-cols-2 gap-8 lg:gap-16 items-center">
          <!-- Left Content -->
          <div class="content-spacing animate-fade-in">
            <div class="space-y-4 sm:space-y-6 sm:pt-8">
              <div
                class="inline-flex items-center px-3 sm:px-4 py-2 bg-white/10 backdrop-blur-sm rounded-full border border-white/20"
              >
                <Star size={16} class="text-accent-400 mr-2" />
                <span class="text-sm font-medium"
                  >8+ Years of Educational Excellence</span
                >
              </div>

              <h1 class="heading-1 text-shadow">
                Welcome to <span
                  class="bg-gradient-to-r from-accent-400 to-primary-400 bg-clip-text text-transparent"
                  >Paramount Grove</span
                > Convent School
              </h1>

              <p class="text-lead">
                Creating a Brighter Future through innovative education, modern
                teaching methods, and holistic development of every student.
              </p>
            </div>

            <!-- Improved Button Section -->
            <div class="flex flex-col sm:flex-row mt-3 gap-4 sm:gap-6">
              <a
                href="/admissions"
                class="relative inline-flex items-center justify-center px-6 py-4 bg-gradient-to-r from-primary-600 via-primary-500 to-accent-600 text-white font-semibold rounded-xl shadow-xl hover:shadow-2xl transform hover:scale-105 transition-all duration-300 group overflow-hidden"
              >
                <!-- Animated background -->
                <div class="absolute inset-0 bg-gradient-to-r from-accent-600 via-primary-500 to-primary-600 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                
                <!-- Button content -->
                <span class="relative z-10  flex items-center">
                  Apply for Admission
                  <ArrowRight
                    size={20}
                    class="ml-2 group-hover:translate-x-1 transition-transform duration-300"
                  />
                </span>
                
                <!-- Shine effect -->
                <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-500">
                  <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent skew-x-12 -translate-x-full group-hover:translate-x-full transition-transform duration-1000"></div>
                </div>
              </a>
              
              <a
                href="/about"
                class="relative inline-flex items-center justify-center px-6 py-4 bg-transparent text-primary-400 border-2 border-primary-400 font-semibold rounded-xl hover:bg-primary-400 hover:text-white transition-all duration-300 group overflow-hidden"
              >
                <!-- Animated background -->
                <div class="absolute inset-0 bg-gradient-to-r from-primary-400 to-accent-400 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                
                <!-- Button content -->
                <span class="relative z-10 flex items-center">
                  Discover More
                  <svg class="ml-2 w-4 h-4 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </span>
              </a>
            </div>
          </div>

          <!-- Right Content - Features -->
          <div class="space-y-4 sm:space-y-6 animate-slide-up">
            <div class="grid gap-4 sm:gap-6">
              <div
                class="flex items-start space-x-3 sm:space-x-4 p-4 sm:p-6 glass-effect rounded-2xl border border-white/10 hover:bg-white/10 transition-all duration-300"
              >
                <div
                  class="p-2 sm:p-3 bg-gradient-to-br from-accent-500 to-accent-600 rounded-xl flex-shrink-0"
                >
                  <Award size={20} class="text-white sm:w-6 sm:h-6" />
                </div>
                <div>
                  <h3 class="text-lg sm:text-xl font-semibold mb-1 sm:mb-2">
                    Academic Excellence
                  </h3>
                  <p class="text-sm sm:text-base text-secondary-300">
                    Comprehensive curriculum designed to nurture critical
                    thinking and creativity.
                  </p>
                </div>
              </div>

              <div
                class="flex items-start space-x-3 sm:space-x-4 p-4 sm:p-6 glass-effect rounded-2xl border border-white/10 hover:bg-white/10 transition-all duration-300"
              >
                <div
                  class="p-2 sm:p-3 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex-shrink-0"
                >
                  <Users size={20} class="text-white sm:w-6 sm:h-6" />
                </div>
                <div>
                  <h3 class="text-lg sm:text-xl font-semibold mb-1 sm:mb-2">
                    Holistic Development
                  </h3>
                  <p class="text-sm sm:text-base text-secondary-300">
                     Dedicated support for struggling students, ensuring personalised attention and academic success
                  </p>
                </div>
              </div>

              <div
                class="flex items-start space-x-3 sm:space-x-4 p-4 sm:p-6 glass-effect rounded-2xl border border-white/10 hover:bg-white/10 transition-all duration-300"
              >
                <div
                  class="p-2 sm:p-3 bg-gradient-to-br from-accent-600 to-primary-500 rounded-xl flex-shrink-0"
                >
                  <BookOpen size={20} class="text-white sm:w-6 sm:h-6" />
                </div>
                <div>
                  <h3 class="text-lg sm:text-xl font-semibold mb-1 sm:mb-2">
                    No Re-admission
                  </h3>
                  <p class="text-sm sm:text-base text-secondary-300">
                    One time admission Fee for a hassle free return to excellence.
                  </p>
                </div>
              </div>

              <div
                class="flex items-start space-x-3 sm:space-x-4 p-4 sm:p-6 glass-effect rounded-2xl border border-white/10 hover:bg-white/10 transition-all duration-300"
              >
                <div
                  class="p-2 sm:p-3 bg-gradient-to-br from-primary-600 to-accent-500 rounded-xl flex-shrink-0"
                >
                  <Target size={20} class="text-white sm:w-6 sm:h-6" />
                </div>
                <div>
                  <h3 class="text-lg sm:text-xl font-semibold mb-1 sm:mb-2">
                    Future Ready
                  </h3>
                  <p class="text-sm sm:text-base text-secondary-300">
                    Preparing students for success in the digital age with
                    modern teaching methods.
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Scroll indicator -->
<div
  class="absolute bottom-6 sm:bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce"
>
  <div
    class="w-5 h-8 sm:w-6 sm:h-10 border-2 border-white/30 rounded-full flex justify-center"
  >
    <div class="w-1 h-2 sm:h-3 bg-white/60 rounded-full mt-2 animate-pulse">
    </div>
  </div>
</div>
