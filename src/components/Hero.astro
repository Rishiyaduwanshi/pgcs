---
import { ArrowRight, Award, Users, BookOpen, Target, Star } from "lucide-astro";
---

<section class="relative overflow-hidden gradient-bg text-white min-h-screen flex items-center">
  <!-- Background Pattern -->
  <div class="absolute inset-0 bg-pattern opacity-20"></div>

  <!-- Animated Background Elements -->
  <div class="absolute inset-0">
    <div class="absolute top-20 left-10 w-32 h-32 bg-white/5 rounded-full blur-xl animate-pulse-slow"></div>
    <div class="absolute bottom-20 right-10 w-48 h-48 bg-accent-500/20 rounded-full blur-2xl animate-pulse-slow delay-75"></div>
    <div class="absolute top-1/2 left-1/4 w-24 h-24 bg-primary-400/20 rounded-full blur-xl animate-pulse-slow delay-150"></div>
  </div>

  <!-- Hero Content -->
  <div class="relative w-full">
    <div class="container-custom">
      <div class="py-12 sm:py-16 lg:py-24">
        <div class="balanced-grid items-center">
          <!-- Left Content -->
          <div class="space-y-6 sm:space-y-8 animate-fade-in">
            <div class="space-y-4 sm:space-y-6">
              <div class="inline-flex items-center px-3 py-2 bg-white/10 backdrop-blur-sm rounded-full border border-white/20">
                <Star size={14} class="text-accent-400 mr-2 sm:w-4 sm:h-4" />
                <span class="text-xs sm:text-sm font-medium">8+ Years of Educational Excellence</span>
              </div>

              <h1 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-bold tracking-tight text-white leading-tight text-shadow">
                Welcome to <span class="bg-gradient-to-r from-accent-400 to-primary-400 bg-clip-text text-transparent">Paramount Grove</span> Convent School
              </h1>

              <p class="text-base sm:text-lg md:text-xl lg:text-2xl text-secondary-300 leading-relaxed">
                Creating a Brighter Future through innovative education, modern teaching methods, and holistic development of every student.
              </p>
            </div>

            <!-- Improved Button Section -->
            <div class="responsive-flex">
              <a href="/admissions" class="relative inline-flex items-center justify-center px-4 py-3 sm:px-6 sm:py-4 bg-gradient-to-r from-primary-600 via-primary-500 to-accent-600 text-white font-semibold rounded-lg sm:rounded-xl shadow-xl hover:shadow-2xl transform hover:scale-105 transition-all duration-300 group overflow-hidden text-sm sm:text-base">
                <div class="absolute inset-0 bg-gradient-to-r from-accent-600 via-primary-500 to-primary-600 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                <span class="relative z-10 flex items-center">
                  Apply for Admission
                  <ArrowRight size={16} class="ml-2 group-hover:translate-x-1 transition-transform duration-300 sm:w-5 sm:h-5" />
                </span>
                <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-500">
                  <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent skew-x-12 -translate-x-full group-hover:translate-x-full transition-transform duration-1000"></div>
                </div>
              </a>
              
              <a href="/about" class="relative inline-flex items-center justify-center px-4 py-3 sm:px-6 sm:py-4 bg-transparent text-primary-400 border-2 border-primary-400 font-semibold rounded-lg sm:rounded-xl hover:bg-primary-400 hover:text-white transition-all duration-300 group overflow-hidden text-sm sm:text-base">
                <div class="absolute inset-0 bg-gradient-to-r from-primary-400 to-accent-400 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                <span class="relative z-10 flex items-center">
                  Discover More
                  <svg class="ml-2 w-3 h-3 sm:w-4 sm:h-4 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </span>
              </a>
            </div>

            <!-- Mobile Stats -->
            <div class="responsive-grid pt-4 sm:pt-6">
              <div class="text-center p-3 sm:p-4 glass-effect rounded-lg sm:rounded-xl">
                <div class="text-xl sm:text-2xl lg:text-3xl font-bold text-accent-400 mb-1">8+</div>
                <div class="text-xs sm:text-sm text-secondary-300">Years Excellence</div>
              </div>
              <div class="text-center p-3 sm:p-4 glass-effect rounded-lg sm:rounded-xl">
                  <ArrowRight
                    size={20}
                    class="ml-2 group-hover:translate-x-1 transition-transform duration-300"
                  />
                </span>
                
                <!-- Shine effect -->
                <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-500">
                  <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent skew-x-12 -translate-x-full group-hover:translate-x-full transition-transform duration-1000"></div>
                </div>
              </a>
              
              <a
                href="/about"
                class="relative inline-flex items-center justify-center px-6 py-4 bg-transparent text-primary-400 border-2 border-primary-400 font-semibold rounded-xl hover:bg-primary-400 hover:text-white transition-all duration-300 group overflow-hidden"
              >
                <!-- Animated background -->
                <div class="absolute inset-0 bg-gradient-to-r from-primary-400 to-accent-400 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                
                <!-- Button content -->
                <span class="relative z-10 flex items-center">
                  Discover More
                  <svg class="ml-2 w-4 h-4 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </span>
              </a>
            </div>
          </div>

          <!-- Right Content - Features -->
          <div class="space-y-4 sm:space-y-6 animate-slide-up">
            <div class="grid gap-4 sm:gap-6">
              <div
                class="flex items-start space-x-3 sm:space-x-4 p-4 sm:p-6 glass-effect rounded-2xl border border-white/10 hover:bg-white/10 transition-all duration-300"
              >
                <div
                  class="p-2 sm:p-3 bg-gradient-to-br from-accent-500 to-accent-600 rounded-xl flex-shrink-0"
                >
                  <Award size={20} class="text-white sm:w-6 sm:h-6" />
                </div>
                <div>
                  <h3 class="text-lg sm:text-xl font-semibold mb-1 sm:mb-2">
                    Academic Excellence
                  </h3>
                  <p class="text-sm sm:text-base text-secondary-300">
                    Comprehensive curriculum designed to nurture critical
                    thinking and creativity.
                  </p>
                </div>
              </div>

              <div
                class="flex items-start space-x-3 sm:space-x-4 p-4 sm:p-6 glass-effect rounded-2xl border border-white/10 hover:bg-white/10 transition-all duration-300"
              >
                <div
                  class="p-2 sm:p-3 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex-shrink-0"
                >
                  <Users size={20} class="text-white sm:w-6 sm:h-6" />
                </div>
                <div>
                  <h3 class="text-lg sm:text-xl font-semibold mb-1 sm:mb-2">
                    Holistic Development
                  </h3>
                  <p class="text-sm sm:text-base text-secondary-300">
                    Focus on personality development, sports, arts, and
                    leadership skills.
                  </p>
                </div>
              </div>

              <div
                class="flex items-start space-x-3 sm:space-x-4 p-4 sm:p-6 glass-effect rounded-2xl border border-white/10 hover:bg-white/10 transition-all duration-300"
              >
                <div
                  class="p-2 sm:p-3 bg-gradient-to-br from-accent-600 to-primary-500 rounded-xl flex-shrink-0"
                >
                  <BookOpen size={20} class="text-white sm:w-6 sm:h-6" />
                </div>
                <div>
                  <h3 class="text-lg sm:text-xl font-semibold mb-1 sm:mb-2">
                    Modern Facilities
                  </h3>
                  <p class="text-sm sm:text-base text-secondary-300">
                    State-of-the-art classrooms, labs, library, and sports
                    facilities.
                  </p>
                </div>
              </div>

              <div
                class="flex items-start space-x-3 sm:space-x-4 p-4 sm:p-6 glass-effect rounded-2xl border border-white/10 hover:bg-white/10 transition-all duration-300"
              >
                <div
                  class="p-2 sm:p-3 bg-gradient-to-br from-primary-600 to-accent-500 rounded-xl flex-shrink-0"
                >
                  <Target size={20} class="text-white sm:w-6 sm:h-6" />
                </div>
                <div>
                  <h3 class="text-lg sm:text-xl font-semibold mb-1 sm:mb-2">
                    Future Ready
                  </h3>
                  <p class="text-sm sm:text-base text-secondary-300">
                    Preparing students for success in the digital age with
                    modern teaching methods.
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Scroll indicator -->
<div
  class="absolute bottom-6 sm:bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce"
>
  <div
    class="w-5 h-8 sm:w-6 sm:h-10 border-2 border-white/30 rounded-full flex justify-center"
  >
    <div class="w-1 h-2 sm:h-3 bg-white/60 rounded-full mt-2 animate-pulse">
    </div>
  </div>
</div>
