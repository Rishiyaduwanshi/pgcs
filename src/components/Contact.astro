---
import { Phone, Mail, MapPin, Clock } from "lucide-astro";
import ContactForm from "./ui/ContactForm.astro";
---

<section class="section-padding bg-secondary-900">
  <div class="container-custom">
    <div class="text-center mb-12 lg:mb-16">
      <h2 class="heading-2 mb-4 sm:mb-6">Get In Touch</h2>
      <p class="text-lead max-w-3xl mx-auto">
        Have questions about admissions, academics, or want to schedule a visit?
        We'd love to hear from you and help you on your educational journey.
      </p>
    </div>

    <div class="grid lg:grid-cols-2 gap-8 lg:gap-12">
      <!-- Contact Information -->
      <div class="content-spacing">
        <div class="space-y-4 sm:space-y-6">
          <h3 class="heading-3 text-primary-400">Contact Information</h3>
          <p class="text-secondary-300 leading-relaxed text-sm sm:text-base">
            Reach out to us through any of the following channels. Our
            admissions team is ready to assist you with all your queries and
            guide you through the admission process.
          </p>
        </div>

        <div class="space-y-4 sm:space-y-6">
          <!-- Branch 1 -->
          <div class="card p-4 sm:p-6">
            <h4
              class="text-base sm:text-lg font-semibold text-white mb-3 sm:mb-4"
            >
              Branch 1
            </h4>
            <div class="space-y-2 sm:space-y-3">
              <div class="flex items-start space-x-2 sm:space-x-3">
                <MapPin
                  size={18}
                  class="text-primary-400 mt-0.5 sm:w-5 sm:h-5"
                />
                <div>
                  <p class="text-sm sm:text-base text-secondary-300">
                    RS Tank Navtoliya Laheriasarai near RB memorial Nursing
                    School
                  </p>
                  <p class="text-sm sm:text-base text-secondary-300">
                    Bihar, India Darbhanga (846001)
                  </p>
                </div>
              </div>
              <div class="flex items-center space-x-2 sm:space-x-3">
                <Phone size={18} class="text-primary-400 sm:w-5 sm:h-5" />
                <a
                  href="tel:+91-9473243629, "
                  class="text-sm sm:text-base text-secondary-300 hover:text-primary-400 transition-colors"
                >
                  +91 8540982656
                </a>
                <a
                  href="tel:+91-9473243629"
                  class="text-sm sm:text-base text-secondary-300 hover:text-primary-400 transition-colors"
                >
                  +91 9473243629
                </a>
              </div>
              <div class="flex items-center space-x-2 sm:space-x-3">
                <Mail size={18} class="text-primary-400 sm:w-5 sm:h-5" />
                <a
                  href="mailto:info@paramountgrove.in"
                  class="text-sm sm:text-base text-secondary-300 hover:text-primary-400 transition-colors"
                >
                  contact@paramountgrove.in
                </a>
              </div>
            </div>
          </div>

          <!-- Branch 2 -->
          <div class="card p-4 sm:p-6">
            <h4
              class="text-base sm:text-lg font-semibold text-white mb-3 sm:mb-4"
            >
              Branch 2
            </h4>
            <div class="space-y-2 sm:space-y-3">
              <div class="flex items-start space-x-2 sm:space-x-3">
                <MapPin
                  size={18}
                  class="text-primary-400 mt-0.5 sm:w-5 sm:h-5"
                />
                <div>
                  <p class="text-sm sm:text-base text-secondary-300">
                    Ram Nagar near bahadurpur police station
                  </p>
                  <p class="text-sm sm:text-base text-secondary-300">
                    Bihar, India Darbhanga (846001)
                  </p>
                </div>
              </div>
              <div class="flex items-center space-x-2 sm:space-x-3">
                <Phone size={18} class="text-primary-400 sm:w-5 sm:h-5" />
                <a
                  href="tel:+91 8540982656"
                  class="text-sm sm:text-base text-secondary-300 hover:text-primary-400 transition-colors"
                >
                  +91 8540982656
                </a>
                <a
                  href="tel:+91 9473243629"
                  class="text-sm sm:text-base text-secondary-300 hover:text-primary-400 transition-colors"
                >
                  +91 9473243629
                </a>
              </div>
              <div class="flex items-center space-x-2 sm:space-x-3">
                <Mail size={18} class="text-primary-400 sm:w-5 sm:h-5" />
                <a
                  href="mailto:contact@paramountgrove.in"
                  class="text-sm sm:text-base text-secondary-300 hover:text-primary-400 transition-colors"
                >
                  contact@paramountgrove.in
                </a>
              </div>
            </div>
          </div>

          <!-- Office Hours -->
          <div class="card p-4 sm:p-6">
            <h4
              class="text-base sm:text-lg font-semibold text-white mb-3 sm:mb-4"
            >
              Office Hours
            </h4>
            <div class="space-y-2 sm:space-y-3">
              <div class="flex items-start space-x-2 sm:space-x-3">
                <Clock
                  size={18}
                  class="text-primary-400 mt-0.5 sm:w-5 sm:h-5"
                />
                <div>
                  <p class="text-sm sm:text-base text-secondary-300">
                    Tuesday - Friday: 8:00 AM - 01:00 PM
                  </p>
                  <p class="text-sm sm:text-base text-secondary-300">
                    Monday: 08:00 AM - 11:00 PM
                  </p>
                  <p class="text-sm sm:text-base text-secondary-300">
                    Sunday: Closed
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Contact Form -->
      <div class="card p-6 sm:p-8">
        <h3 class="heading-3 text-primary-400 mb-4 sm:mb-6">
          Send us a Message
        </h3>
        <ContactForm variant="dark" />
      </div>
    </div>
  </div>
</section>
