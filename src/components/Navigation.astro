---
import { Menu, X, ChevronDown } from 'lucide-astro';
---

<header class="sticky top-0 z-50 glass-effect border-b border-white/10">
  <nav class="container-custom">
    <div class="flex items-center justify-between h-16 lg:h-20">
      <!-- Logo -->
      <div class="flex items-center">
        <a href="/" class="flex items-center space-x-3 group">
          <div class="w-10 h-10 lg:w-12 lg:h-12 bg-gradient-to-br from-primary-500 to-accent-500 rounded-xl flex items-center justify-center transition-transform group-hover:scale-105">
            <span class="text-white font-bold text-lg lg:text-xl">PGCS</span>
          </div>
          <div class="hidden sm:block">
            <h1 class="text-lg lg:text-xl font-bold text-white group-hover:text-primary-400 transition-colors">PGCS</h1>
            <p class="text-xs lg:text-sm text-secondary-400">Paramount Grove Convent School</p>
          </div>
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center space-x-8">
        <a href="/" class="text-secondary-300 hover:text-primary-400 font-medium transition-colors">Home</a>
        
        <div class="relative group">
          <button class="flex items-center space-x-1 text-secondary-300 hover:text-primary-400 font-medium transition-colors">
            <span>About</span>
            <ChevronDown size={16} class="group-hover:rotate-180 transition-transform" />
          </button>
          <div class="absolute top-full left-0 mt-2 w-48 glass-effect border border-white/10 rounded-xl shadow-2xl opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
            <a href="/about" class="block px-4 py-3 text-secondary-300 hover:bg-white/10 hover:text-primary-400 transition-colors first:rounded-t-xl">About Us</a>
            <a href="/history" class="block px-4 py-3 text-secondary-300 hover:bg-white/10 hover:text-primary-400 transition-colors">Our History</a>
            <a href="/mission" class="block px-4 py-3 text-secondary-300 hover:bg-white/10 hover:text-primary-400 transition-colors">Mission & Vision</a>
            <a href="/faculty" class="block px-4 py-3 text-secondary-300 hover:bg-white/10 hover:text-primary-400 transition-colors last:rounded-b-xl">Faculty</a>
          </div>
        </div>

        <a href="/admissions" class="text-secondary-300 hover:text-primary-400 font-medium transition-colors">Admissions</a>
        <a href="/facilities" class="text-secondary-300 hover:text-primary-400 font-medium transition-colors">Facilities</a>
        <a href="/contact" class="text-secondary-300 hover:text-primary-400 font-medium transition-colors">Contact</a>
      </div>

      <!-- CTA Button -->
      <div class="hidden lg:block">
        <a href="/admissions" class="btn-primary">
          Apply Now
        </a>
      </div>

      <!-- Mobile menu button -->
      <button 
        class="lg:hidden p-2 rounded-lg text-secondary-300 hover:text-primary-400 hover:bg-white/10 transition-colors"
        id="mobile-menu-button"
      >
        <Menu size={24} class="block" id="menu-icon" />
        <X size={24} class="hidden" id="close-icon" />
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div class="lg:hidden border-t border-white/10 hidden" id="mobile-menu">
      <div class="py-4 space-y-1">
        <a href="/" class="block px-4 py-3 text-secondary-300 hover:bg-white/10 hover:text-primary-400 transition-colors rounded-lg mx-2">Home</a>
        <a href="/about" class="block px-4 py-3 text-secondary-300 hover:bg-white/10 hover:text-primary-400 transition-colors rounded-lg mx-2">About Us</a>
        <a href="/admissions" class="block px-4 py-3 text-secondary-300 hover:bg-white/10 hover:text-primary-400 transition-colors rounded-lg mx-2">Admissions</a>
        <a href="/facilities" class="block px-4 py-3 text-secondary-300 hover:bg-white/10 hover:text-primary-400 transition-colors rounded-lg mx-2">Facilities</a>
        <a href="/contact" class="block px-4 py-3 text-secondary-300 hover:bg-white/10 hover:text-primary-400 transition-colors rounded-lg mx-2">Contact</a>
        <div class="px-4 py-2">
          <a href="/admissions" class="btn-primary w-full">Apply Now</a>
        </div>
      </div>
    </div>
  </nav>
</header>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    const menuIcon = document.getElementById('menu-icon');
    const closeIcon = document.getElementById('close-icon');

    if (mobileMenuButton && mobileMenu && menuIcon && closeIcon) {
      mobileMenuButton.addEventListener('click', function() {
        const isHidden = mobileMenu.classList.contains('hidden');
        
        if (isHidden) {
          mobileMenu.classList.remove('hidden');
          menuIcon.classList.add('hidden');
          closeIcon.classList.remove('hidden');
        } else {
          mobileMenu.classList.add('hidden');
          menuIcon.classList.remove('hidden');
          closeIcon.classList.add('hidden');
        }
      });
    }
  });
</script>
