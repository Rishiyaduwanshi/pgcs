---
import { Calendar } from 'lucide-astro';

const { milestones } = Astro.props;

const colorClasses = {
  blue: 'from-blue-500 to-blue-600',
  green: 'from-green-500 to-green-600',
  purple: 'from-purple-500 to-purple-600',
  yellow: 'from-yellow-500 to-yellow-600',
  cyan: 'from-cyan-500 to-cyan-600'
};
---

<section class="section-padding bg-secondary-800/30">
  <div class="container-custom">
    <div class="text-center mb-12 lg:mb-16">
      <h2 class="heading-2 mb-4 sm:mb-6">Our Journey</h2>
      <p class="text-lead max-w-3xl mx-auto">
        Key milestones that have shaped our institution and our commitment to educational excellence.
      </p>
    </div>

    <div class="relative">
      <!-- Timeline Line -->
      <div class="absolute left-1/2 transform -translate-x-1/2 w-1 h-full bg-gradient-to-b from-primary-600 to-accent-600 rounded-full hidden lg:block"></div>

      <div class="space-y-8 lg:space-y-12">
        {milestones.map((milestone, index) => (
          <div class={`flex items-center ${index % 2 === 0 ? 'lg:flex-row' : 'lg:flex-row-reverse'}`}>
            <!-- Content -->
            <div class="w-full lg:w-5/12">
              <div class="card p-6 lg:p-8 hover:glow group">
                <div class="flex items-center mb-4">
                  <div class={`w-12 h-12 bg-gradient-to-br ${colorClasses[milestone.color]} rounded-xl flex items-center justify-center mr-4 group-hover:scale-110 transition-transform`}>
                    <Calendar size={20} class="text-white" />
                  </div>
                  <span class="text-2xl font-bold text-primary-400">{milestone.year}</span>
                </div>
                <h3 class="text-xl lg:text-2xl font-bold text-white mb-3">{milestone.title}</h3>
                <p class="text-secondary-300 leading-relaxed">
                  {milestone.description}
                </p>
              </div>
            </div>

            <!-- Timeline Node -->
            <div class="hidden lg:flex w-2/12 justify-center">
              <div class={`w-4 h-4 bg-gradient-to-br ${colorClasses[milestone.color]} rounded-full border-4 border-secondary-900 shadow-lg`}></div>
            </div>

            <!-- Spacer -->
            <div class="hidden lg:block w-5/12"></div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
