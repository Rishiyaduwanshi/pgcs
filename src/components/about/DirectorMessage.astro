---
import { Quote } from 'lucide-astro';

const { director } = Astro.props;
---

<section class="section-padding bg-secondary-800/50">
  <div class="container-custom">
    <div class="max-w-6xl mx-auto">
      <div class="grid lg:grid-cols-2 gap-8 lg:gap-16 items-center">
        <!-- Director Image -->
        <div class="order-2 lg:order-1">
          <div class="relative">
            <div class="aspect-[4/5] bg-gradient-to-br from-primary-600/20 to-accent-600/20 rounded-2xl lg:rounded-3xl overflow-hidden border border-white/10 backdrop-blur-sm">
              <img 
                src={director.image} 
                alt={director.name}
                class="w-full h-full object-cover hover:scale-105 transition-transform duration-700"
                loading="lazy"
              />
            </div>
            <div class="absolute -top-4 -right-4 w-16 h-16 bg-gradient-to-br from-accent-500 to-primary-500 rounded-full flex items-center justify-center">
              <Quote size={24} class="text-white" />
            </div>
          </div>
        </div>

        <!-- Director Message -->
        <div class="order-1 lg:order-2">
          <div class="space-y-6">
            <div class="text-center lg:text-left">
              <h3 class="text-2xl lg:text-3xl font-bold text-white mb-2">{director.name}</h3>
              <p class="text-primary-400 font-medium text-lg">{director.designation}</p>
              <p class="text-secondary-400 text-sm mt-1">{director.qualification}</p>
            </div>

            <div class="space-y-4 text-secondary-300">
              {director.message.map((paragraph, index) => (
                <p class="leading-relaxed text-base lg:text-lg">
                  {paragraph}
                </p>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
