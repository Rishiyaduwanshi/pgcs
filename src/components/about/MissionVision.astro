---
import { Target, Eye } from 'lucide-astro';

const { mission, vision } = Astro.props;
---

<section class="section-padding bg-secondary-900">
  <div class="container-custom">
    <div class="text-center mb-12 lg:mb-16">
      <h2 class="heading-2 mb-4 sm:mb-6">Our Mission & Vision</h2>
      <p class="text-lead max-w-3xl mx-auto">
        Guiding principles that shape our educational philosophy and drive our commitment to excellence.
      </p>
    </div>

    <div class="grid lg:grid-cols-2 gap-8 lg:gap-12">
      <!-- Mission -->
      <div class="card p-8 lg:p-10 hover:glow group">
        <div class="text-center mb-6">
          <div class="w-16 h-16 bg-gradient-to-br from-primary-500 to-primary-600 rounded-2xl flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform">
            <Target size={32} class="text-white" />
          </div>
          <h3 class="text-2xl lg:text-3xl font-bold text-white mb-2">{mission.title}</h3>
        </div>
        <p class="text-secondary-300 leading-relaxed text-base lg:text-lg">
          {mission.content}
        </p>
      </div>

      <!-- Vision -->
      <div class="card p-8 lg:p-10 hover:glow group">
        <div class="text-center mb-6">
          <div class="w-16 h-16 bg-gradient-to-br from-accent-500 to-accent-600 rounded-2xl flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform">
            <Eye size={32} class="text-white" />
          </div>
          <h3 class="text-2xl lg:text-3xl font-bold text-white mb-2">{vision.title}</h3>
        </div>
        <p class="text-secondary-300 leading-relaxed text-base lg:text-lg">
          {vision.content}
        </p>
      </div>
    </div>
  </div>
</section>
